<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- A basic style, for use in a ListView that contains a LinearView. Good for titles. -->
    <style name="ListViewHeader">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- A basic style, for use in a ListView that contains a LinearView. Good for other details. -->
    <style name="ListViewItem">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

</resources>
